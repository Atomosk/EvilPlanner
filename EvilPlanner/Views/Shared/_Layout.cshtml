    <div id="content">
        <h1>@ViewBag.Title</h1>

        @RenderBody()
    </div>
    <footer>
        <div>
            <a class="tag" href="https://fornever.me/rss.xml">RSS</a>
            <a class="tag" href="https://github.com/ForNeVeR/fornever.me">GitHub</a>
        </div>
        <div>
            Сайт сгенерирован при помощи
            <a href="http://jaspervdj.be/hakyll">Hakyll</a>
